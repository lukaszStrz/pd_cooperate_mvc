@model Cooperate_mvc.Models.CreateTaskModel

@using (Ajax.BeginForm("SelectGroup", "Tasks", new AjaxOptions { UpdateTargetId = "Users" }))
{ 
    @Html.DropDownListFor(
            m => m.SelectedGroupId,
            new SelectList(Model.Groups, "Id", "Name"),
           string.Empty
        )
}

<script type="text/javascript">
    $('#SelectedGroupId').change(function () {
        $(this).parents('form').submit();
    });
</script>
